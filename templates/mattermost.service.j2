[Unit]
Description={{ mattermost_team_name }} mattermost
After=network.target
After=mysql.service
Requires=mysql.service

[Service]
Type=simple
ExecStart={{ mattermost_root_dir }}/bin/platform
WorkingDirectory={{ mattermost_root_dir }}
Restart=always
RestartSec=10
User={{ mattermost_user }}
Group={{ mattermost_group }}
LimitNOFILE=49152

[Install]
WantedBy=multi-user.target
